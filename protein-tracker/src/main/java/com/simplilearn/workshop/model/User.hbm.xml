<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.simplilearn.workshop.model.User" table="users">
		<!-- primary key column in Users table -->
		<id name="id" type="int">
			<column name="id" />
			<generator class="identity" />
		</id>

		<property name="name" type="java.lang.String">
			<column name="name" />
		</property>

		<component name="proteinData">
			<property name="total" type="int">
				<column name="total" />
			</property>

			<property name="goal" type="int">
				<column name="goal" />
			</property>
		</component>
		
		<list name="history" inverse="true" cascade="save-update">
			<key column="USER_ID"/>
			<list-index column="POSITION"/>
			<one-to-many class="com.simplilearn.workshop.model.UserHistory"/>
		</list>

	</class>

</hibernate-mapping>